@model IEnumerable<ScarpeCommerce.Models.Scarpe>


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezzo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImmagineCopertina)
        </th>
    </tr>

@foreach (var item in Model) {
   
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>
        <td style="text-wrap: nowrap;">
            @Html.DisplayFor(modelItem => item.Prezzo) €
        </td>
        <td>
            <img src="@item.ImmagineCopertina" alt="@item.Nome" width="100" height="100" class="object-fit-contain">
        </td>
        <td>
            @Html.ActionLink("Vai a dettagli", "Dettagli", new { id = item.Nome })
        </td>

    </tr>
}

</table>
